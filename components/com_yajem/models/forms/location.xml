<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">

        <field
                name="id"
                type="text"
                label="JGLOBAL_FIELD_ID_LABEL"
                description="JGLOBAL_FIELD_ID_DESC"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="catid"
                type="categoryedit"
                label="JCATEGORY"
                description="COM_YAJEM_FIELD_CATEGORY_DESC"
                extension="com_yajem"
                required="true"
                addfieldpath="/administrator/components/com_categories/models/fields"
                default=""
        />

        <field
                name="published"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                default="1"
                class="chzn-color-state"
                size="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
                name="title"
                type="text"
                label="COM_YAJEM_FIELD_TITLE_LABEL"
                description="COM_YAJEM_FIELD_TITLE_DESC"
                class="input-xxlarge input-large-text"
                size="255"
                required="true"
        />

        <field
                name="url"
                type="text"
                label="COM_YAJEM_FIELD_LOCATION_URL_LABEL"
                description="COM_YAJEM_FIELD_URL_DESC"
                class="input-xxlarge input-large-text"
                size="200"
                required="false"
        />
		<field
				name="description"
				type="editor"
				label="JGLOBAL_DESCRIPTION"
				description="COM_YAJEM_FIELD_DESCRIPTION_DESC"
				filter="JComponentHelper::filterText"
				buttons="true"
				hide="readmore,pagebreak"
				height="100px"
				rows="15"
		/>

		<field
				name="ordering"
				type="ordering"
				label="JFIELD_ORDERING_LABEL"
				description="JFIELD_ORDERING_DESC"
				table="#__yajem_locations"
		/>
	</fieldset>
	<fieldset name="address">
        <field
                name="street"
                type="text"
                label="COM_YAJEM_FIELD_STREET_LABEL"
                description="COM_YAJEM_FIELD_STREET_DESC"
                size="50"
                required="true"
        />

        <field
                name="postalCode"
                type="text"
                label="COM_YAJEM_FIELD_POSTALCODE_LABEL"
                description="COM_YAJEM_FIELD_POSTALCODE_DESC"
                size="20"
                required="true"
        />

        <field
                name="city"
                type="text"
                label="COM_YAJEM_FIELD_CITY_LABEL"
                description="COM_YAJEM_FIELD_CITY_DESC"
                size="50"
                required="true"
        />

        <field
                name="stateAddress"
                type="text"
                label="COM_YAJEM_FIELD_ADRESSSTATE_LABEL"
                description="COM_YAJEM_FIELD_ADRESSSTATE_DESC"
                size="50"
                required="false"
        />

		<field
				name="latlng"
				type="text"
				label="COM_YAJEM_FIELD_LATLNG_LABEL"
				description="COM_YAJEM_FIELD_LATLNG_DESC"
				size="50"
				required="false"
				class="readonly"
		/>
	</fieldset>

	<fields name="params">
		<fieldset name="image"	label="COM_YAJEM_IMAGE_FIELDS">
			<field
					name="image"
					type="media"
					preview="tooltip"
					label="COM_YAJEM_LOCATION_FIELD_IMAGE_LABEL"
					description="COM_YAJEM_LOCATION_FIELD_IMAGE_DESC" />
			<field name="alt"
				   type="text"
				   label="COM_YAJEM_LOCATION_FIELD_ALT_LABEL"
				   description="COM_YAJEM_LOCATION_FIELD_ALT_DESC"
				   size="30"/>
			<field name="caption"
				   type="text"
				   label="COM_YAJEM_LOCATION_FIELD_CAPTION_LABEL"
				   description="COM_YAJEM_LOCATION_FIELD_CAPTION_DESC"
				   size="30"/>
		</fieldset>
	</fields>

	<fieldset name="basic" addfieldpath="/administrator/components/com_contact/models/fields">
		<field
				name="contact_id"
				type="modal_contact"
				default=""
				label="COM_YAJEM_LOCATION_CONTACT_SELECT_LABEL"
				description="COM_YAJEM_LOCATION_CONTACT_SELECT_DESC" />
	</fieldset>

    <fieldset name="publish" label="COM_YAJEM_GROUP_LABEL_PUBLISHING_DETAILS">

        <field
                name="created"
                type="calendar"
                label="COM_YAJEM_FIELD_CREATED_LABEL"
                description="COM_YAJEM_FIELD_CREATED_DESC"
                size="22"
                format="%Y-%m-%d %H:%M:%S"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="user"
                label="COM_YAJEM_FIELD_CREATED_BY_LABEL"
                description="COM_YAJEM_FIELD_CREATED_BY_DESC"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                description="COM_YAJEM_FIELD_MODIFIED_DESC"
                class="readonly"
                size="22"
                readonly="true"
                format="%Y-%m-%d %H:%M:%S"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                description="COM_YAJEM_FIELD_MODIFIED_BY_DESC"
                class="readonly"
                readonly="true"
                filter="unset"
        />
    </fieldset>

</form>
