<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" method="upgrade">
    <name>COM_SDAPROFILE</name>
    <creationDate>18.01.2023</creationDate>
    <author>Alexander Bahlo</author>
    <authorEmail>abahlo@hotmail.de</authorEmail>
    <copyright>Alexander Bahlo</copyright>
    <license>GNU General Public License version 2 or later;</license>
    <version>__BUMP_VERSION__</version>
    <description>COM_SDAPROFILE_XML_DESCRIPTION</description>
    <namespace path="src">Sda\Component\Sdaprofile</namespace>

    <scriptfile>script.php</scriptfile>

    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <update>  <!-- Runs on update -->
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <!-- Front-end files -->
    <files folder="components/com_sdajem">
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
    </files>

    <media folder="media/com_sdaprofile" destination="com_sdaprofile">
        <folder>images</folder>
    </media>

    <!-- Back-end files -->
    <administration>
        <files folder="administrator/components/com_sdajem">
            <filename>sdaprofile.xml</filename>
            <folder>language</folder>
            <folder>sql</folder>
        </files>
    </administration>
    <changelogurl></changelogurl>
    <updateservers>
        <server type="extension" name="Sdajem Updates"></server>
    </updateservers>
    <dlid prefix="dlid=" suffix="" />
</extension>