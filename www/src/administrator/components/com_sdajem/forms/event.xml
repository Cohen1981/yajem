<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldprefix="Sda\Component\Sdajem\Administrator\Field">
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                class="readonly"
                readonly="true"
        />
        <field
                name="title"
                type="text"
                label="COM_SDAJEM_FIELD_TITLE_LABEL"
                size="40"
                required="true"
        />
        <field
                name="alias"
                type="text"
                label="JFIELD_ALIAS_LABEL"
                size="45"
                hint="JFIELD_ALIAS_PLACEHOLDER"
        />
        <field
                name="description"
                type="editor"
                label="COM_SDAJEM_FIELD_EVENTDESC_LABEL"
        />
        <field
                name="url"
                type="text"
                label="COM_SDAJEM_FIELD_URL_LABEL"
                size="255"
        />
        <field
                name="sdajem_location_id"
                type="modal_location"
                label="COM_FOOS_SELECT_FOO_LABEL"
                required="true"
                select="true"
                new="true"
                edit="true"
                clear="true"
        />
        <field
                name="allDayEvent"
                type="list"
                label="COM_SDAJEM_FIELD_ALLDAYEVENT_LABEL"
                default="1"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="startDateTime"
                type="calendar"
                label="COM_SDAJEM_FIELD_STARTDATETIME_LABEL"
                showtime="true"
                translateformat="true"
                todaybutton="true"
                size="22"
        />
        <field
                name="endDateTime"
                type="calendar"
                label="COM_SDAJEM_FIELD_ENDDATETIME_LABEL"
                showtime="true"
                translateformat="true"
                todaybutton="true"
                size="22"
        />
        <field
                name="catid"
                type="categoryedit"
                label="JCATEGORY"
                extension="com_sdajem.events"
                addfieldprefix="Joomla\Component\Categories\Administrator\Field"
                required="true"
                default=""
        />
    </fieldset>
    <fieldset name="language" label="JFIELD_LANGUAGE_LABEL">
        <field
                name="language"
                type="contentlanguage"
                label="JFIELD_LANGUAGE_LABEL"
        >
            <option value="*">JALL</option>
        </field>
    </fieldset>
    <fieldset name="publishing" label="JGLOBAL_FIELDSET_PUBLISHING">
        <field
                name="featured"
                type="list"
                label="JFEATURED"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="published"
                type="list"
                label="JSTATUS"
                default="1"
                id="published"
                class="custom-select-color-state"
                size="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field
                name="publish_up"
                type="calendar"
                label="COM_SDAJEM_FIELD_PUBLISH_UP_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />
        <field
                name="publish_down"
                type="calendar"
                label="COM_SDAJEM_FIELD_PUBLISH_DOWN_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />
        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                size="1"
        />
        <field
                name="checked_out"
                type="hidden"
                filter="unset"
        />
        <field
                name="checked_out_time"
                type="hidden"
                filter="unset"
        />
    </fieldset>
</form>