<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldprefix="Sda\Component\Sdajem\Administrator\Field">
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                class="readonly"
                readonly="true"
        />
        <field
                name="title"
                type="text"
                label="COM_SDAJEM_FIELD_FITTING_TITLE_LABEL"
                size="40"
                required="true"
        />
        <field
                name="alias"
                type="text"
                label="JFIELD_ALIAS_LABEL"
                size="45"
                hint="JFIELD_ALIAS_PLACEHOLDER"
        />
        <field
                name="description"
                type="editor"
                label="COM_SDAJEM_FIELD_FITTING_DESC_LABEL"
        />
        <field
                name="length"
                type="number"
                label="COM_SDAJEM_FIELD_FITTING_LENGTH_LABEL"
                default="0"
                step="0.5"
        />
        <field
                name="width"
                type="number"
                label="COM_SDAJEM_FIELD_FITTING_WIDTH_LABEL"
                default="0"
                step="0.5"
        />
        <field
                name="standard"
                type="list"
                label="COM_SDAJEM_FIELD_FITTING_STANDARD_LABEL"
                default="1"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="fittingType"
                type="Fittingtypelist"
                label="COM_SDAJEM_FIELD_FITTING_TYPE_LABEL"
        />
    </fieldset>
    <fieldset name="publishing" label="JGLOBAL_FIELDSET_PUBLISHING">
        <field
                name="published"
                type="list"
                label="JSTATUS"
                default="1"
                id="published"
                class="custom-select-color-state"
                size="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field
                name="publish_up"
                type="calendar"
                label="COM_SDAJEM_FIELD_PUBLISH_UP_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />
        <field
                name="publish_down"
                type="calendar"
                label="COM_SDAJEM_FIELD_PUBLISH_DOWN_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />
        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                size="1"
        />
    </fieldset>
</form>