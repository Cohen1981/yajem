<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                inputmode="search"
                label="COM_SDAJEM_FILTER_SEARCH_LABEL"
                description="COM_SDAJEM_FILTER_SEARCH_ATTENDINGS_DESC"
                hint="JSEARCH_FILTER"
        />
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="JGLOBAL_SORT_BY"
                default="a.title ASC"
                onchange="this.form.submit();"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="title ASC">SDAJEM_FITTING_TITLE_ASC</option>
            <option value="title DESC">SDAJEM_FITTING_TITLE_DESC</option>
            <option value="userName ASC">SDAJEM_USER_NAME_ASC</option>
            <option value="userName DESC">SDAJEM_USER_NAME_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                label="JGLOBAL_LIST_LIMIT"
                default="25"
                onchange="this.form.submit();"
        />
    </fields>
</form>