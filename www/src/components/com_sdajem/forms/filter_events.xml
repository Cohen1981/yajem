        <field
                name="search"
                type="text"
                inputmode="search"
                label="COM_SDAJEM_FILTER_SEARCH_LABEL"
                description="COM_SDAJEM_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />
