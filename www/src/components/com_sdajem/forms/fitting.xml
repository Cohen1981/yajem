<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" addfieldprefix="Sda\Component\Sdajem\Administrator\Field">
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                class="readonly"
                readonly="true"
        />
        <field
                name="title"
                type="text"
                label="COM_SDAJEM_FIELD_FITTING_TITLE_LABEL"
                size="40"
                required="true"
        />
        <field
                name="alias"
                type="text"
                size="45"
                hint="JFIELD_ALIAS_PLACEHOLDER"
                class="hidden"
        />
        <field
                name="image"
                type="media"
                label="COM_SDAJEM_FT_IMAGE_LABEL"
                directory="lagerplanung"
        />
        <field
                name="length"
                type="number"
                label="COM_SDAJEM_FIELD_FITTING_LENGTH_LABEL"
                default="0"
                step="0.5"
                description="COM_SDAJEM_FIELD_FITTING_LENGTH_DESC"
        />
        <field
                name="width"
                type="number"
                label="COM_SDAJEM_FIELD_FITTING_WIDTH_LABEL"
                default="0"
                step="0.5"
                description="COM_SDAJEM_FIELD_FITTING_WIDTH_DESC"
        />
        <field
                name="standard"
                type="list"
                label="COM_SDAJEM_FIELD_FITTING_STANDARD_LABEL"
                default="1"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="needSpace"
                type="list"
                label="COM_SDAJEM_FIELD_FT_NEEDSPACE_LABEL"
                default="1"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="description"
                type="editor"
                label="COM_SDAJEM_FIELD_FITTING_DESC_LABEL"
        />
    </fieldset>
    <fieldset name="admin" addfieldprefix="Sda\Component\Sdajem\Administrator\Field">
        <field
                name="user_id"
                type="Userlist"
                label="COM_SDAJEM_FIELD_USER_TITLE_LABEL"
                description="COM_SDAJEM_FIELD_USER_DESC_LABEL"
        />
    </fieldset>
</form>