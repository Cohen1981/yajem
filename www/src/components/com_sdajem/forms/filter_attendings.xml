<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                inputmode="search"
                label="COM_SDAJEM_FILTER_SEARCH_LABEL"
                description="COM_SDAJEM_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="JGLOBAL_SORT_BY"
                default="a.title ASC"
                onchange="this.form.submit();"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="eventTitle ASC">SDAJEM_EVENT_TITLE_ASC</option>
            <option value="eventTitle DESC">SDAJEM_EVENT_TITLE_DESC</option>
            <option value="attendeeName ASC">SDAJEM_ATTENDEE_NAME_ASC</option>
            <option value="a.attendeeName DESC">SDAJEM_ATTENDEE_NAME_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                label="JGLOBAL_LIST_LIMIT"
                default="25"
                onchange="this.form.submit();"
        />
    </fields>
</form>