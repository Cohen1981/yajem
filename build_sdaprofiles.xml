<?xml version="1.0" encoding="utf-8"?>
<project name="sda_profiles" default="build_sdaprofiles">

    <property name="profiles.build.version" value="0.0.1"/>

    <property name="profiles.build.dir" value="${project.basedir}/build/com_sdaprofiles"/>
    <property name="profiles.dist.dir" value="${project.basedir}/target/packages"/>
    <property name="profiles.admin.src.dir" value="${project.basedir}/administrator/components/com_sdaprofiles"/>
    <property name="profiles.site.src.dir" value="${project.basedir}/components/com_sdaprofiles"/>
    <property name="profiles.media.src.dir" value="${project.basedir}/media/com_sdaprofiles"/>
    <property name="profiles.vendor.src.dir" value="${project.basedir}/vendor"/>

    <tstamp>
        <format property="datetime" pattern="dd.MM.yyyy" locale="de"/>
    </tstamp>
    <property name="creation.date" value="${TODAY}"/>

    <target name="prepare_sdaprofiles" description="prepare for packaging" hidden="true">
        <echo>${profiles.build.dir}</echo>
        <echo>${profiles.dist.dir}</echo>
        <echo>${profiles.admin.src.dir}</echo>
        <echo>${profiles.site.src.dir}</echo>
        <echo>${profiles.media.src.dir}</echo>
        <echo>${profiles.vendor.src.dir}</echo>
        <mkdir dir="${profiles.build.dir}" />
        <mkdir dir="${profiles.dist.dir}" />
    </target>

    <target name="cleanup_sdaprofiles" description="cleaning after build" hidden="true">
        <delete dir="${profiles.build.dir}" includeemptydirs="true"/>
    </target>

    <target name="copyFiles_sdaprofiles" description="copy main files for packaging" hidden="true">

        <!-- Copy the font-awesome dependencies -->
        <copy file="${profiles.vendor.src.dir}/components/font-awesome/css/fontawesome-all.min.css" todir="${profiles.media.src.dir}/css" overwrite="true" />
        <copy todir="${profiles.media.src.dir}/webfonts" overwrite="true">
            <fileset dir="${profiles.vendor.src.dir}/components/font-awesome/webfonts" includes="**.**"/>
        </copy>

        <!-- Copy com_sdaprofiles to build for packaging -->
        <copy todir="${profiles.build.dir}/administrator/components/com_sdaprofiles" overwrite="true">
            <fileset dir="${profiles.admin.src.dir}" includes="**/**">
                <exclude name="sdaprofiles.xml" />
                <exclude name="script.php" />
            </fileset>
        </copy>
        <copy file="${profiles.admin.src.dir}/sdaprofiles.xml" todir="${profiles.build.dir}" overwrite="true" />
        <copy file="${profiles.admin.src.dir}/script.php" todir="${profiles.build.dir}" overwrite="true" />
        <copy todir="${profiles.build.dir}/components/com_sdaprofiles" overwrite="true">
            <fileset dir="${profiles.site.src.dir}" includes="**/**" />
        </copy>
        <copy todir="${profiles.build.dir}/media/com_sdaprofiles" overwrite="true">
            <fileset dir="${profiles.media.src.dir}" includes="**/**" />
        </copy>

    </target>

    <target name="zip_sdaprofiles" description="package the archive" depends="copyFiles_sdaprofiles" hidden="true">
        <zip destfile="${profiles.dist.dir}/com_sdaprofiles.zip"
             includeemptydirs="true"
             basedir="${profiles.build.dir}/" />
    </target>

    <target name="build_sdaprofiles" description="packaging all"
            depends="prepare_sdaprofiles, zip_sdaprofiles, cleanup_sdaprofiles"/>

</project>