	<!-- Scripts to run on installation
	<scriptfile>script.php</scriptfile>
	-->

	<!-- Runs on install -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install/mysql/mysql.sql</file>
		</sql>
	</install>

	<!-- Runs on uninstall -->
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall/mysql/mysql.sql</file>
		</sql>
	</uninstall>

	<!-- Runs on update -->
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Media files -->
	<media folder="media/com_sdacontacts" destination="com_sdacontacts">
		<folder>css</folder>
		<folder>webfonts</folder>
		<folder>images</folder>
	</media>

	<!-- Front-end files -->
	<files folder="components/com_sdacontacts">
		<filename>sdacontacts.php</filename>
		<folder>Controller</folder>
		<folder>Toolbar</folder>
		<folder>View</folder>
		<folder>views</folder>
		<folder>ViewTemplates</folder>
	</files>

	<!-- Back-end files -->
	<administration>
		<!-- Menu entries -->
		<menu>COM_SDACONTACTS</menu>

		<!-- Core files -->
		<files folder="administrator/components/com_sdacontacts">
			<filename>sdacontacts.php</filename>
			<filename>fof.xml</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<folder>language</folder>
			<folder>Model</folder>
			<folder>sql</folder>
			<folder>View</folder>
		</files>

	</administration>

	<!-- Update servers
	<updateservers>
		<server type="extension" priority="1" name="yajem">https://www.example.com/yajem.xml</server>
	</updateservers>
	 -->
</extension>
