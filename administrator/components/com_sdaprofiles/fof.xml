<?xml version="1.0" encoding="UTF-8"?>
<fof>

	<common>

		<container>
			<!-- Set up the The Factory class which will be used by FOF to determine how much "magic" you want FOF to apply to your component.-->
			<option name="factoryClass"><![CDATA[FOF30\Factory\MagicFactory]]></option>

			<!-- Use componentNamespace option to configure more unique namespaces, recommened to use something like CompanyName\ComponentName -->
			<option name="componentNamespace"><![CDATA[Sda\Profiles]]></option>
			<option name="scaffolding">1</option>
			<option name="saveScaffolding">1</option>

		</container>

		<dispatcher>
			<option name="defaultView">Profiles</option>
		</dispatcher>

		<model name="*">
			<behaviors merge="1">Filters</behaviors>
		</model>

	</common>

	<!-- Component backend options -->
	<backend>

	</backend>

	<!-- Component frontend options -->
	<frontend>
		<!-- The same options as Common Settings apply here, too -->
		<!-- Controller, View and Toolbar setup. One tag per view. -->
		<view name="Profiles">

			<!-- Controller and View options -->
			<config>
				<option name="useConfigurationFile">1</option>
				<option name="renderFrontendButtons">1</option>
			</config>

			<!-- Toolbar configuration -->
		</view>

		<view name="Fittings">

			<!-- Controller and View options -->
			<config>
				<option name="useConfigurationFile">1</option>
				<option name="renderFrontendButtons">1</option>
			</config>

			<!-- Toolbar configuration -->
			<toolbar title="COM_SDAPROFILES_TITLE_FITTINGS_BROWSE" task="browse">
				<button type="new" />
			</toolbar>
			<toolbar title="COM_SDAPROFILES_TITLE_FITTINGS_READ" task="read">
				<button type="back" />
			</toolbar>
			<toolbar title="COM_SDAPROFILES_TITLE_FITTINGS_EDIT" task="edit">
				<button type="apply" />
				<button type="save" />
				<button type="cancel" />
			</toolbar>
			<toolbar title="COM_SDAPROFILES_TITLE_FITTINGS_EDIT" task="add">
				<button type="apply" />
				<button type="save" />
				<button type="cancel" />
			</toolbar>
		</view>

		<view name="FittingImages">
			<config>
				<option name="useConfigurationFile">1</option>
				<option name="renderFrontendButtons">1</option>
			</config>
			<toolbar title="COM_SDAPROFILES_TITLE_FITTINGIMAGES_BROWSE" task="browse">
				<button type="new" />
				<button type="edit" />
				<button type="delete" />
			</toolbar>
		</view>
		<view name="FittingTypes">
			<config>
				<option name="useConfigurationFile">1</option>
				<option name="renderFrontendButtons">1</option>
			</config>
		</view>
	</frontend>

</fof>