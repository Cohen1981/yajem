<?xml version="1.0" encoding="UTF-8"?>
<fof>

	<common>

		<container>
			<!-- Set up the The Factory class which will be used by FOF to determine how much "magic" you want FOF to apply to your component.-->
			<option name="factoryClass"><![CDATA[FOF30\Factory\MagicFactory]]></option>

			<!-- Use componentNamespace option to configure more unique namespaces, recommened to use something like CompanyName\ComponentName -->
			<option name="componentNamespace"><![CDATA[Sda\Jem]]></option>
			<option name="scaffolding">1</option>
			<option name="saveScaffolding">1</option>

		</container>

		<dispatcher>
			<option name="defaultView">Events</option>
		</dispatcher>

		<model name="*">
			<behaviors merge="1">Filters</behaviors>
		</model>

	</common>

	<!-- Component backend options -->
	<backend>

		<config>
			<option name="useConfigurationFile">1</option>
		</config>
		<!-- The same options as Common Settings apply here, too -->
		<view name="Events">
			<toolbar title="COM_SDAJEM_TITLE_EVENTS_BROWSE" task="browse">
				<button type="preferences" component="com_todo" />
			</toolbar>
		</view>
	</backend>

	<!-- Component frontend options -->
	<frontend>
		<!-- The same options as Common Settings apply here, too -->
		<!-- Controller, View and Toolbar setup. One tag per view. -->
		<view name="Events">

			<!-- Controller and View options -->
			<config>
				<option name="useConfigurationFile">1</option>
				<option name="renderFrontendButtons">1</option>
			</config>

			<!-- Toolbar configuration -->
			<toolbar title="COM_SDAJEM_TITLE_EVENTS_BROWSE" task="browse">
				<button type="new" />
			</toolbar>
			<toolbar title="COM_SDAJEM_TITLE_EVENTS_READ" task="read">
				<button type="custom" task="edit" alt="JGLOBAL_EDIT" list_select="false" icon="edit"/>
				<button type="back" />
			</toolbar>
			<toolbar title="COM_SDAJEM_TITLE_EVENTS_EDIT" task="edit">
				<button type="apply" />
				<button type="save" />
				<button type="cancel" />
			</toolbar>
			<toolbar title="COM_SDAJEM_TITLE_EVENTS_EDIT" task="add">
				<button type="apply" />
				<button type="save" />
				<button type="cancel" />
			</toolbar>
		</view>

		<view name="Locations">
			<!-- Controller and View options -->
			<config>
				<option name="useConfigurationFile">1</option>
				<option name="renderFrontendButtons">1</option>
			</config>

			<!-- Toolbar configuration -->
			<toolbar title="COM_SDAJEM_TITLE_LOCATIONS_EDIT" task="edit">
				<button type="apply" />
				<button type="save" />
				<button type="cancel" />
			</toolbar>
		</view>

	</frontend>

</fof>