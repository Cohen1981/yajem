<?xml version="1.0" encoding="UTF-8" ?>
<config>
	<fieldset name="general"
	          label="COM_SDAJEM_GLOBAL_CONFIG_LABEL"
	          description="COM_SDAJEM_GLOBAL_CONFIG_DESC"
	          >
		<field name="use_sdacontacts"
		       type="radio"
		       label="COM_SDAJEM_SDACONTACTS_LABEL"
		       description="COM_SDAJEM_SDACONTACTS_DESC"
		       class="btn-group btn-group-yesno"
		       default="1"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="mail_on_new"
		       type="radio"
		       label="COM_SDAJEM_MAILONNEW_LABEL"
		       description="COM_SDAJEM_MAILONNEW_DESC"
		       class="btn-group btn-group-yesno"
		       default="1"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="mail_on_edited"
		       type="radio"
		       label="COM_SDAJEM_MAILONEDITED_LABEL"
		       description="COM_SDAJEM_MAILONEDITED_DESC"
		       class="btn-group btn-group-yesno"
		       default="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
	</fieldset>
	<fieldset
			name="permissions"
			label="JCONFIG_PERMISSIONS_LABEL"
			description="JCONFIG_PERMISSIONS_DESC"
	>
		<field
				name="rules"
				type="rules"
				label="JCONFIG_PERMISSIONS_LABEL"
				class="inputbox"
				validate="rules"
				filter="rules"
				component="com_sdajem"
				section="component"
		/>
	</fieldset>
</config>