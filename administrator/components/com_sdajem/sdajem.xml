	<description>COM_SDAJEM_XML_DESCRIPTION</description>

	<!-- Scripts to run on installation
	<scriptfile>script.php</scriptfile>
	-->

	<!-- Runs on install -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install/mysql/mysql.sql</file>
		</sql>
	</install>

	<!-- Runs on uninstall -->
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall/mysql/mysql.sql</file>
		</sql>
	</uninstall>

	<!-- Runs on update
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	-->

	<!-- Media files -->
	<media folder="media/com_sdajem" destination="com_sdajem">
		<folder>css</folder>
		<folder>js</folder>
		<folder>webfonts</folder>
	</media>

	<!-- Front-end files -->
	<files folder="components/com_sdajem">
		<filename>sdajem.php</filename>
		<folder>Controller</folder>
		<folder>language</folder>
		<folder>Model</folder>
		<folder>Toolbar</folder>
		<folder>View</folder>
		<folder>views</folder>
		<folder>ViewTemplates</folder>
	</files>

	<!-- Front end translation files
	<languages folder="language/frontend">
		<language tag="en-GB">en-GB/en-GB.com_sdajem.ini</language>
		<language tag="de-DE">de-DE/de-DE.com_sdajem.ini</language>
	</languages>
	-->

	<!-- Back-end files -->
	<administration>
		<!-- Menu entries -->
		<menu>COM_SDAJEM</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="option=com_sdajem&amp;view=events"
			      alt="Profiles List/Profiles">COM_SDAJEM_SUBMENU_EVENTS</menu>
			<menu link="option=com_sdajem&amp;view=locations"
			      alt="Fittings List/Fittings">COM_SDAJEM_SUBMENU_LOCATIONS</menu>
			<menu link="option=com_sdajem&amp;view=categories"
			      alt="Fittings List/Fittings">COM_SDAJEM_SUBMENU_CATEGORIES</menu>
		</submenu>

		<!-- Core files -->
		<files folder="administrator/components/com_sdajem">
			<filename>sdajem.php</filename>
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<filename>fof.xml</filename>
			<folder>Helper</folder>
			<folder>language</folder>
			<folder>Model</folder>
			<folder>sql</folder>
			<folder>View</folder>
		</files>

		<!-- Back-end translation files
		<languages folder="language/backend">
			<language tag="en-GB">en-GB/en-GB.com_sdajem.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_sdajem.sys.ini</language>
			<language tag="de-DE">de-DE/de-DE.com_sdajem.ini</language>
			<language tag="de-DE">de-DE/de-DE.com_sdajem.sys.ini</language>
		</languages>
		-->

	</administration>

	<!-- Update servers
	<updateservers>
		<server type="extension" priority="1" name="yajem">https://www.example.com/yajem.xml</server>
	</updateservers>
	 -->
</extension>
