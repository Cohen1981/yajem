<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">

        <field
                name="id"
                type="text"
                label="JGLOBAL_FIELD_ID_LABEL"
                description="JGLOBAL_FIELD_ID_DESC"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="catid"
                type="categoryedit"
                label="JCATEGORY"
                description="COM_YAJEM_FIELD_CATEGORY_DESC"
                extension="com_yajem"
                required="false"
                addfieldpath="/administrator/components/com_categories/models/fields"
                default=""
        />

        <field
                name="published"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                default="1"
                class="chzn-color-state"
                size="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
                name="title"
                type="text"
                label="COM_YAJEM_FIELD_TITLE_LABEL"
                description="COM_YAJEM_FIELD_TITLE_DESC"
                class="input-xxlarge input-large-text"
                size="255"
                required="true"
        />

		<field
				name="alias"
				type="text"
				label="COM_YAJEM_FIELD_ALIAS_LABEL"
				description="COM_YAJEM_FIELD_ALIAS_DESC"
				class="input-xxlarge input-large-text"
				size="255"
				required="false"
		/>

        <field
                name="url"
                type="text"
                label="COM_YAJEM_FIELD_EVENT_URL_LABEL"
                description="COM_YAJEM_FIELD_URL_DESC"
                class="input-xxlarge input-large-text"
                size="200"
                required="false"
        />

        <field
                name="description"
                type="editor"
                label="JGLOBAL_DESCRIPTION"
                description="COM_YAJEM_FIELD_DESCRIPTION_DESC"
                filter="JComponentHelper::filterText"
                buttons="true"
                hide="readmore,pagebreak"
                height="100px"
                rows="15"
        />

        <field
                name="ordering"
                type="ordering"
                label="JFIELD_ORDERING_LABEL"
                description="JFIELD_ORDERING_DESC"
                table="#__yajem_events"
        />

	</fieldset>

	<fieldset name="options">
		<field name="allDayEvent"
			   type="radio"
			   label="COM_YAJEM_FIELD_ALLDAY_LABEL"
			   description="COM_YAJEM_FIELD_ALLDAY_DESC"
			   class="btn-group btn-group-yesno"
			   default="1"
		>
			<option value="1">COM_YAJEM_PARAM_YES</option>
			<option value="0">COM_YAJEM_PARAM_NO</option>
		</field>
	</fieldset>
	<fieldset name="detailed_duration">
		<field
				name="startDateTime"
				showon="allDayEvent:0"
				type="calendar"
				label="COM_YAJEM_FIELD_STARTDATE_LABEL"
				description="COM_YAJEM_FIELD_STARTDATE_DESC"
				size="22"
				format="%d.%m.%Y %H:%M"
				filter="user_utc"
				showtime="true"
				timeformat="24"
		/>

		<field
				name="endDateTime"
				showon="allDayEvent:0"
				type="calendar"
				label="COM_YAJEM_FIELD_ENDDATE_LABEL"
				description="COM_YAJEM_FIELD_ENDDATE_DESC"
				size="22"
				format="%d.%m.%Y %H:%M"
				filter="user_utc"
				showtime="true"
				timeformat="24"
		/>
    </fieldset>
	<fieldset name="duration">
		<field
				name="startDate"
				showon="allDayEvent:1"
				type="calendar"
				label="COM_YAJEM_FIELD_STARTDATE_LABEL"
				description="COM_YAJEM_FIELD_STARTDATE_DESC"
				size="22"
				format="%d.%m.%Y"
				filter="user_utc"
		/>

		<field
				name="endDate"
				showon="allDayEvent:1"
				type="calendar"
				label="COM_YAJEM_FIELD_ENDDATE_LABEL"
				description="COM_YAJEM_FIELD_ENDDATE_DESC"
				size="22"
				format="%d.%m.%Y"
				filter="user_utc"
		/>
	</fieldset>

	<fields name="params">
		<fieldset name="image"	label="COM_YAJEM_IMAGE_FIELDS">
			<field
					name="image"
					type="media"
					preview="tooltip"
					label="COM_YAJEM_EVENT_FIELD_IMAGE_LABEL"
					description="COM_YAJEM_EVENT_FIELD_IMAGE_DESC" />
			<field name="alt"
				   type="text"
				   label="COM_YAJEM_EVENT_FIELD_ALT_LABEL"
				   description="COM_YAJEM_EVENT_FIELD_ALT_DESC"
				   size="30"/>
			<field name="caption"
				   type="text"
				   label="COM_YAJEM_EVENT_FIELD_CAPTION_LABEL"
				   description="COM_YAJEM_EVENT_FIELD_CAPTION_DESC"
				   size="30"/>
		</fieldset>
	</fields>

	<fieldset name="contact_host" addfieldpath="/administrator/components/com_contact/models/fields">
		<field
				name="useHost"
				type="radio"
				label="COM_YAJEM_FIELD_HOST_LABEL"
				description="COM_YAJEM_FIELD_HOST_DESC"
				class="btn-group btn-group-yesno"
				default="0"
		>
			<option value="1">COM_YAJEM_PARAM_YES</option>
			<option value="0">COM_YAJEM_PARAM_NO</option>
		</field>
		<field
				name="hostId"
				showon="useHost:1"
				type="modal_contact"
				default=""
				label="COM_YAJEM_EVENT_HOST_SELECT_LABEL"
				description="COM_YAJEM_EVENT_HOST_SELECT_DESC" />
	</fieldset>
	<fieldset name="contact_organizer" addfieldpath="/administrator/components/com_contact/models/fields">
		<field
				name="useOrganizer"
				type="radio"
				label="COM_YAJEM_FIELD_ORGANIZER_LABEL"
				description="COM_YAJEM_FIELD_ORGANIZER_DESC"
				class="btn-group btn-group-yesno"
				default="0"
		>
			<option value="1">COM_YAJEM_PARAM_YES</option>
			<option value="0">COM_YAJEM_PARAM_NO</option>
		</field>
		<field
				name="organizerId"
				showon="useOrganizer:1"
				type="modal_contact"
				default=""
				label="COM_YAJEM_EVENT_ORGANIZER_SELECT_LABEL"
				description="COM_YAJEM_EVENT_ORGANIZER_SELECT_DESC" />
	</fieldset>

	<fieldset name="user_organizer">
		<field
				name="organizerId"
				type="user"
				label="COM_YAJEM_FIELD_ORGANIZER_SELECT_LABEL"
				description="COM_YAJEM_FIELD_ORGANIZER_SELECT_DESC"
				required="false"
		/>
	</fieldset>

	<fieldset name="registration">
		<field
			name="useRegistration"
			type="radio"
			label="COM_YAJEM_FIELD_REGISTRATION_LABEL"
			description="COM_YAJEM_FIELD_REGISTRATION_DESC"
			class="btn-group btn-group-yesno"
			default="1"
		>
			<option value="1">COM_YAJEM_PARAM_YES</option>
			<option value="0">COM_YAJEM_PARAM_NO</option>
		</field>
		<field
				name="useRegisterUntil"
				showon="useRegistration:1"
				type="radio"
				label="COM_YAJEM_FIELD_USEREGISTRATIONUNTIL_LABEL"
				description="COM_YAJEM_FIELD_REGISTRATION_DESC"
				class="btn-group btn-group-yesno"
				default="1"
		>
			<option value="1">COM_YAJEM_PARAM_YES</option>
			<option value="0">COM_YAJEM_PARAM_NO</option>
		</field>
		<field
				name="registerUntil"
				showon="useRegisterUntil:1"
				class="yajem_registration"
				type="calendar"
				label="COM_YAJEM_FIELD_REGISTER_UNTIL_LABEL"
				description="COM_YAJEM_FIELD_REGISTER_UNTIL_DESC"
				size="22"
				format="%d.%m.%Y"
				filter="user_utc"
		/>
		<field
			name="registrationLimit"
			showon="useRegistration:1"
			class="yajem_registration"
			type="number"
			label="COM_YAJEM_FIELD_REGLIMIT_LABEL"
			description="COM_YAJEM_REGLIMIT_DESC"
			min="0"
			max="9999"
			step="1"
			default="0"
		/>
		<field
				name="useWaitingList"
				showon="useRegistration:1"
				type="radio"
				label="COM_YAJEM_FIELD_WAITING_LABEL"
				description="COM_YAJEM_FIELD_WAITING_DESC"
				class="btn-group btn-group-yesno yajem_registration"
				default="0"
		>
			<option value="1">COM_YAJEM_PARAM_YES</option>
			<option value="0">COM_YAJEM_PARAM_NO</option>
		</field>

	</fieldset>

	<fieldset name="request" addfieldpath="/administrator/components/com_yajem/models/fields">
		<field name="locationId"
			   type="modal_location"
			   label="COM_YAJEM_EVENT_LOCATION_SELECT_LABEL"
			   description="COM_YAJEM_EVENT_LOCATION_SELECT_DESC"
			   required="true" />
	</fieldset>

	<fieldset name="location_list" addfieldpath="/administrator/components/com_yajem/models/fields">
		<field name="locationId"
			   type="locations"
			   label="COM_YAJEM_EVENT_LOCATION_SELECT_LABEL"
			   description="COM_YAJEM_EVENT_LOCATION_SELECT_DESC"
			   required="true" />
	</fieldset>

    <fieldset name="publish" label="COM_YAJEM_GROUP_LABEL_PUBLISHING_DETAILS">

        <field
                name="created"
                type="calendar"
                label="COM_YAJEM_FIELD_CREATED_LABEL"
                description="COM_YAJEM_FIELD_CREATED_DESC"
                size="22"
                format="%d.%m.%Y %H:%M:%S"
                filter="user_utc"
        />

        <field
                name="createdBy"
                type="user"
                label="COM_YAJEM_FIELD_CREATED_BY_LABEL"
                description="COM_YAJEM_FIELD_CREATED_BY_DESC"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                description="COM_YAJEM_FIELD_MODIFIED_DESC"
                class="readonly"
                size="22"
                readonly="true"
                format="%d.%m.%Y %H:%M:%S"
                filter="user_utc"
        />

        <field
                name="modifiedBy"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                description="COM_YAJEM_FIELD_MODIFIED_BY_DESC"
                class="readonly"
                readonly="true"
                filter="unset"
        />
    </fieldset>

</form>
