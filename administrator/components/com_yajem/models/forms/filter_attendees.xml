<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
				name="search"
				type="text"
				label="COM_YAJEM_FILTER_SEARCH_DESC"
				hint="JSEARCH_FILTER"
		/>

		<field
				name="eventId"
				type="Events"
				label="COM_YAJEM_FILTER_EVENT"
				onchange="this.form.submit();"
		>
			<option value="">COM_YAJEM_SELECT EVENT</option>
		</field>

	</fields>

	<fields name="list">
		<field
				name="fullordering"
				type="list"
				label="COM_YAJEM_LIST_FULL_ORDERING"
				description="COM_YAJEM_LIST_FULL_ORDERING_DESC"
				onchange="this.form.submit();"
				default="a.id DESC"
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.id ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="a.eventId ASC">eventId</option>
			<option value="a.eventId DESC">eventId</option>
			<option value="event ASC">event</option>
			<option value="event DESC">event</option>
			<option value="a.userId ASC">userId</option>
			<option value="a.userId DESC">userId</option>
			<option value="attendee ASC">attendee</option>
			<option value="attendee DESC">attendee</option>
		</field>

		<field
				name="limit"
				type="limitbox"
				class="input-mini"
				default="25"
				label="COM_CONTENT_LIST_LIMIT"
				description="COM_CONTENT_LIST_LIMIT_DESC"
				onchange="this.form.submit();"
		/>
	</fields>
</form>