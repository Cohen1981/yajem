<?xml version="1.0" encoding="utf-8"?>
<project name="sda_pkg" default="package">

    <property name="build.version" value="0.0.1"/>

    <property name="pkg.dist.dir" value="${project.basedir}/target"/>
    <property name="pkg.src.dir" value="${pkg.dist.dir}/packages"/>

    <tstamp>
        <format property="datetime" pattern="dd.MM.yyyy" locale="de"/>
    </tstamp>
    <property name="creation.date" value="${TODAY}"/>

    <import file="${project.basedir}/build_sdajem.xml" />

    <target name="packaging" description="package the archive" hidden="true">
        <copy file="${project.basedir}/pkg_install.php" todir="${dist.dir}" overwrite="true"/>
        <copy file="${project.basedir}/pkg_sda.xml" todir="${dist.dir}" overwrite="true"/>
        <copy todir="${pkg.src.dir}/language" overwrite="true">
            <fileset dir="${project.basedir}/language" includes="**/**" />
        </copy>
        <zip destfile="${pkg.dist.dir}/pkg_sda.zip" includeemptydirs="true" basedir="${pkg.src.dir}" />
        <delete file="${dist.dir}/pkg_install.php" />
        <delete file="${dist.dir}/pkg_sda.xml" />
    </target>

    <target name="package" description="packaging all"
            depends="build_sdajem, packaging"/>

</project>