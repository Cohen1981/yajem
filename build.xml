<?xml version="1.0" encoding="utf-8"?>
<project name="Yajem Extension Build" default="build">

    <property name="build.version" value="0.0.1"/>

    <property name="build.dir" value="${project.basedir}/build"/>
    <property name="dist.dir" value="${project.basedir}/target"/>
    <property name="admin.src.dir" value="${project.basedir}/administrator/components/com_yajem"/>
    <property name="site.src.dir" value="${project.basedir}/components/com_yajem"/>
    <property name="media.src.dir" value="${project.basedir}/media/com_yajem"/>
    <property name="plg.scr.dir" value="${project.basedir}\plugins"/>

    <tstamp>
        <format property="datetime" pattern="dd.MM.yyyy" locale="de"/>
    </tstamp>
    <property name="creation.date" value="${TODAY}"/>

    <target name="prepare" description="prepare for packaging">
        <delete dir="${dist.dir}" includeemptydirs="true"/>
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${build.dir}/com_yajem"/>
        <mkdir dir="${dist.dir}"/>
        <mkdir dir="${dist.dir}/packages"/>
    </target>

    <target name="cleanup" description="cleaning after build">
        <delete dir="${build.dir}" includeemptydirs="true"/>
    </target>

    <target name="copyFiles" description="copy main files for packaging">

        <copy todir="media/com_yajem/css">
            <filelist dir="vendor/components/font-awesome/css" files="fontawesome-all.min.css"/>
        </copy>

        <copy todir="media/com_yajem/webfonts">
            <fileset dir="vendor/components/font-awesome/webfonts">
                <include name="**.**"/>
            </fileset>
        </copy>

        <copy todir="${build.dir}/com_yajem">
            <fileset dir="${project.basedir}">
                <include name="**/LICENSE"/>
                <include name="administrator/**"/>
                <include name="components/**"/>
                <include name="media/**"/>
                <exclude name="administartor/components/com_yajem/yajem.xml"/>
                <exclude name="administartor/components/com_yajem/script.php"/>
                <exclude name="vendor/**"/>
            </fileset>
        </copy>

        <copy todir="${dist.dir}">
            <filelist dir="${project.basedir}" files="pkg_yajem.xml"/>
        </copy>

        <move file="${build.dir}/administrator/components/com_yajem/yajem.xml" todir="${build.dir}/com_yajem"/>
        <move file="${build.dir}/administrator/components/com_yajem/script.php" todir="${build.dir}/com_yajem"/>

    </target>

    <target name="zip" description="package the archive" depends="copyFiles">
        <zip destfile="${dist.dir}/packages/com_yajem.zip" includeemptydirs="true">
            <fileset dir="${build.dir}/com_yajem">
                <include name="**/**"/>
            </fileset>
        </zip>
        <zip destfile="${dist.dir}/pkg_yajem_${build.version}.zip" includeemptydirs="true">
            <fileset dir="${dist.dir}">
                <include name="**/**"/>
            </fileset>
        </zip>
    </target>

    <target name="build" description="packaging all"
            depends="prepare, zip, cleanup"/>

</project>