<?xml version="1.0" encoding="utf-8"?>
<project name="sda_contacts" default="build_sdacontacts">

    <property name="contacts.build.version" value="0.0.1"/>

    <property name="contacts.build.dir" value="${project.basedir}/build/com_sdacontacts"/>
    <property name="contacts.dist.dir" value="${project.basedir}/target/packages"/>
    <property name="contacts.admin.src.dir" value="${project.basedir}/../../src/administrator/components/com_sdacontacts"/>
    <property name="contacts.site.src.dir" value="${project.basedir}/../../src/components/com_sdacontacts"/>
    <property name="contacts.media.src.dir" value="${project.basedir}/../../src/media/com_sdacontacts"/>
    <property name="contacts.vendor.src.dir" value="${project.basedir}/../../vendor"/>

    <tstamp>
        <format property="datetime" pattern="dd.MM.yyyy" locale="de"/>
    </tstamp>
    <property name="creation.date" value="${TODAY}"/>

    <target name="prepare_sdacontacts" description="prepare for packaging" hidden="true">
        <echo>${contacts.build.dir}</echo>
        <echo>${contacts.dist.dir}</echo>
        <echo>${contacts.admin.src.dir}</echo>
        <echo>${contacts.site.src.dir}</echo>
        <echo>${contacts.media.src.dir}</echo>
        <echo>${contacts.vendor.src.dir}</echo>
        <mkdir dir="${contacts.build.dir}"/>
        <mkdir dir="${contacts.dist.dir}" />
    </target>

    <target name="cleanup_sdacontacts" description="cleaning after build" hidden="true">
        <delete dir="${contacts.build.dir}" includeemptydirs="true"/>
    </target>

    <target name="copyFiles_sdacontacts" description="copy main files for packaging" hidden="true">

        <!-- Copy the font-awesome dependencies -->
        <copy file="${contacts.vendor.src.dir}/components/font-awesome/css/fontawesome-all.min.css" todir="${contacts.media.src.dir}/css" overwrite="true" />
        <copy todir="${contacts.media.src.dir}/webfonts" overwrite="true">
            <fileset dir="${contacts.vendor.src.dir}/components/font-awesome/webfonts" includes="**.**"/>
        </copy>

        <!-- Copy com_sdacontacts to build for packaging -->
        <copy todir="${contacts.build.dir}/administrator/components/com_sdacontacts" overwrite="true">
            <fileset dir="${contacts.admin.src.dir}" includes="**/**" excludes="sdacontacts.xml"/>
        </copy>
        <copy file="${contacts.admin.src.dir}/sdacontacts.xml" todir="${contacts.build.dir}" overwrite="true" />
        <copy todir="${contacts.build.dir}/components/com_sdacontacts" overwrite="true">
            <fileset dir="${contacts.site.src.dir}" includes="**/**" />
        </copy>
        <copy todir="${contacts.build.dir}/media/com_sdacontacts" overwrite="true">
            <fileset dir="${contacts.media.src.dir}" includes="**/**" />
        </copy>

    </target>

    <target name="zip_sdacontacts" description="package the archive" depends="copyFiles_sdacontacts" hidden="true">
        <delete file="${contacts.dist.dir}/com_sdacontacts.zip" />
        <zip destfile="${contacts.dist.dir}/com_sdacontacts.zip" includeemptydirs="true" basedir="${contacts.build.dir}/" />
    </target>

    <target name="build_sdacontacts" description="Make a zip"
            depends="prepare_sdacontacts, zip_sdacontacts, cleanup_sdacontacts"/>

</project>