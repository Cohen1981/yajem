<?xml version="1.0" encoding="utf-8"?>
<project name="sda_jem" default="build_sdajem">

    <property name="jem.build.version" value="1.0.0"/>

    <property name="jem.build.dir" value="${project.basedir}/build/com_sdajem"/>
    <property name="jem.dist.dir" value="${project.basedir}/target/packages"/>
    <property name="jem.admin.src.dir" value="${project.basedir}/../../src/administrator/components/com_sdajem"/>
    <property name="jem.site.src.dir" value="${project.basedir}/../../src/components/com_sdajem"/>
    <property name="jem.media.src.dir" value="${project.basedir}/../../src/media/com_sdajem"/>
    <property name="jem.vendor.src.dir" value="${project.basedir}/../../vendor"/>
    <property name="sass.src.dir" value="${project.basedir}/../../src/sassFiles" />

    <tstamp>
        <format property="datetime" pattern="dd.MM.yyyy" locale="de"/>
    </tstamp>
    <property name="creation.date" value="${TODAY}"/>

    <target name="prepare_sdajem" description="prepare for packaging" hidden="true">
        <echo>${jem.build.dir}</echo>
        <echo>${jem.dist.dir}</echo>
        <echo>${jem.admin.src.dir}</echo>
        <echo>${jem.site.src.dir}</echo>
        <echo>${jem.media.src.dir}</echo>
        <echo>${jem.vendor.src.dir}</echo>
        <mkdir dir="${jem.build.dir}"/>
        <mkdir dir="${jem.dist.dir}" />
    </target>

    <target name="cleanup_sdajem" description="cleaning after build" hidden="true">
        <delete dir="${jem.build.dir}" includeemptydirs="true"/>
    </target>

    <target name="copyFiles_sdajem" description="copy main files for packaging" hidden="true">

        <!-- Copy the font-awesome dependencies -->
        <copy file="${jem.vendor.src.dir}/components/font-awesome/css/fontawesome.min.css" todir="${jem.media.src.dir}/css" overwrite="true" />
        <copy file="${jem.vendor.src.dir}/components/font-awesome/css/solid.min.css" todir="${jem.media.src.dir}/css" overwrite="true" />
        <copy todir="${jem.media.src.dir}/webfonts" overwrite="true">
            <fileset dir="${jem.vendor.src.dir}/components/font-awesome/webfonts" includes="fa-solid*.**">
                <exclude name="*.svg"/>
            </fileset>
        </copy>

        <copy file="${sass.src.dir}/sdajem_style.css" todir="${jem.media.src.dir}/css" overwrite="true" />

        <!-- Copy com_sdajem to build for packaging -->
        <copy todir="${jem.build.dir}/administrator/components/com_sdajem" overwrite="true">
            <fileset dir="${jem.admin.src.dir}" includes="**/**">
                <exclude name="sdajem.xml" />
                <exclude name="script.php" />
            </fileset>
        </copy>
        <copy file="${jem.admin.src.dir}/sdajem.xml" todir="${jem.build.dir}" overwrite="true" />
        <copy file="${jem.admin.src.dir}/script.php" todir="${jem.build.dir}" overwrite="true" />
        <copy todir="${jem.build.dir}/components/com_sdajem" overwrite="true">
            <fileset dir="${jem.site.src.dir}" includes="**/**" />
        </copy>
        <copy todir="${jem.build.dir}/media/com_sdajem" overwrite="true">
            <fileset dir="${jem.media.src.dir}" includes="**/**" />
        </copy>

    </target>

    <target name="zip_sdajem" description="package the archive" depends="copyFiles_sdajem" hidden="true">
        <zip destfile="${jem.dist.dir}/com_sdajem.zip" includeemptydirs="true" basedir="${jem.build.dir}/" />
    </target>

    <target name="build_sdajem" description="Make a zip"
            depends="prepare_sdajem, zip_sdajem, cleanup_sdajem"/>

</project>